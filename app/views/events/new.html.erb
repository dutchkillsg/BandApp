<div class = 'container'>
    <div class = 'row'>
        <div class = 'col newevent'>
            <h1>Create a new Event</h1>
            <%= form_for Event.new do |f| %>
                <%= f.label :name %>
                <%= f.text_field :name %>

                <%= f.label :date %>
                <%= f.text_field :date %>


                <%= f.label :image_link %>
                <%= f.text_field :image %>

                <%= f.label :venue_id %>
                <%= f.text_field :venue_id %>

                <%= f.label :band_id %>
                <%= f.text_field :band_id %>
                
                <%= f.label :Alcohol_Served %>
                <%= f.check_box :alcohol_served %>
            	<%=f.submit%>
            <%end%>
        </div>
    </div>
</div>
